<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <div t-name="osm_connector.OsmViewTemplate" class="o_map_container">
        <div class="o_osm_view"></div>
        <div class="o_osm_right_sidebar closed"></div>
    </div>

    <t t-name="osm_connector.OsmViewGroupInfo">
        <ul t-if="widget.groups">
            <t t-foreach="widget.groups" t-as="group">
                <li>
                    <img t-att-src="group.marker"/>
                    <span class="title">
                        <t t-esc="group.title"/>
                    </span>
                    <span class="total">
                        <t t-esc="group.count"/>
                    </span>
                </li>
            </t>
        </ul>
    </t>

    <t t-name="OsmView.buttons">
        <div class="o_list_buttons">
            <t t-if="widget.is_action_enabled !== undefined ? widget.is_action_enabled('create') : false">
                <button type="button" class="btn btn-primary o-map-button-new" accesskey="c">
                    <t t-esc="create_text || _t('Create')"/>
                </button>
            </t>
            <button type="button" class="btn btn-secondary o-map-button-center-map">
                <t t-esc="_t('Center Map')"/>
            </button>
        </div>
    </t>


    <template id="assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link href="/osm_connector/static/src/scss/osm_widget.scss" rel="stylesheet" type="text/css"/>
        </xpath>
    </template>
    <t t-name="osm_connector.OsmField">
        <div class="osm-field"/>
    </t>

</templates>