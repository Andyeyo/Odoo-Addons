                <tree string="Reporte de posiciones">
                    <field name="name"/>    
                    <field name="company_id"/>
                    <field name="in_geofence_mail"/>
                    <field name="out_geofence_mail"/>                    
                </tree>
            </field>
        </record>        
        
        <record model="ir.actions.act_window" id="configuration_geofence_action">
