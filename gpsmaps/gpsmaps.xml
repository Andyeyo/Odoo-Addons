                <field name="color" position="after">   
                    <field name="imei" />
                    <field name="image_gps"/>
                    <field name="phone"/>
                    <field name="position_id"/>
                    <field name="geofence_id"/>
                    <field name="history"/>
                    
                    
                </field>
            </field>
        </record>        
        <record id="view_fleet_vehicle_tree_inherit" model="ir.ui.view">
            <field name="name">fleet.vehicle.tree</field>
